@model IEnumerable<SuperMark.Data.Entities.TblUsuario>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Usuarios</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Usuarios</a></li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card ">
                <div class="card-header">
                    <h3 class="card-title">Tabla General de usuarios</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-link"><span class="fa fa-sitemap"></span>  Administrar permisos</button>
                            <button class="btn btn-outline-success float-right"><span class="fa fa-plus"></span> </button>
                        </div>
                    </div>
                    <br />
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th colspan="2">Nombre</th>
                                <th>Nombre Usuario</th>
                                <th>Contraseña</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td colspan="2">
                                        @item.NombreUsuario @item.ApellidoUsuario
                                    </td>
                                    <td>
                                        @item.UserName
                                    </td>
                                    <td>
                                        @item.PasswordHash.Substring(0, 14)...
                                    </td>
                                    <td>

                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger "><span class="fa fa-trash"></span></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-danger "><span class="fa fa-eye"></span></a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info "> <span class="fa fa-edit"></span></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
